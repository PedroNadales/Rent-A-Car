<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.pedro.rentacar.controller.ReservasViewController"
            stylesheets="@../css/styles.css">

    <!-- Barra superior -->
    <top>
        <HBox spacing="10" styleClass="header-bar">
            <Label styleClass="header-title" text="Gestión de Reservas" />
        </HBox>
    </top>

    <!-- Centro: tabla de reservas -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label styleClass="header-title" text="Listado de Reservas" />
            <TableView fx:id="tablaReservas" styleClass="main-table" maxWidth="-Infinity" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colCliente" prefWidth="200" text="Cliente" />
                    <TableColumn fx:id="colInicio" prefWidth="120" text="Fecha Inicio" />
                    <TableColumn fx:id="colFin" prefWidth="120" text="Fecha Fin" />
                    <TableColumn fx:id="colTotal" prefWidth="100" text="Total (€)" />
                    <TableColumn fx:id="colVehiculos" prefWidth="250" text="Vehículos" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Lado derecho: formulario de reserva -->
    <right>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" vbarPolicy="AS_NEEDED">
            <VBox prefWidth="350" spacing="15" styleClass="right-panel">
                <Label styleClass="header-title" text="Nueva Reserva" />
                
                <Label text="Cliente" />
                <ComboBox fx:id="comboClientes" maxWidth="Infinity" />
                
                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Fecha Inicio" />
                        <DatePicker fx:id="fechaInicio" maxWidth="Infinity" />
                    </VBox>
                    
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Fecha Fin" />
                        <DatePicker fx:id="fechaFin" maxWidth="Infinity" />
                    </VBox>
                </HBox>
                
                <Label text="Vehículos Disponibles" />
                <ListView fx:id="listaVehiculos" prefHeight="200" />
                
                <!-- Botones de acción -->
                <VBox spacing="10" style="-fx-padding: 10 0;">
                    <Button fx:id="btnCrearReserva" maxWidth="Infinity" styleClass="main-button action-button" text="Crear Reserva" />
                    <Button fx:id="btnDevolver" maxWidth="Infinity" styleClass="main-button" text="Registrar Devolución" />
                    <Button fx:id="btnCancelar" maxWidth="Infinity" styleClass="main-button danger-button" text="Cancelar Reserva" />
                </VBox>
                
                <Region VBox.vgrow="ALWAYS" />
                
                <Button fx:id="btnVolver" maxWidth="Infinity" onAction="#volverAPrincipal" styleClass="main-button" text="Volver" />
            </VBox>
        </ScrollPane>
    </right>

    <!-- Pie de página -->
    <bottom>
        <HBox alignment="CENTER">
            <Label text="2025 Rent-A-Car" />
        </HBox>
    </bottom>

</BorderPane>
